---
import arrowRight from '@/assets/shared/desktop/icon-right-arrow.svg'
---

<div class='pt-28 px-6'>
  <ul class='flex flex-col gap-6'>
    {
      Astro.url.pathname !== '/projects/web-design' && (
        <li class='relative flex h-[250px] overflow-hidden rounded-[15px] bg-black bg-[url(/assets/home/mobile/image-web-design.jpg)] bg-cover bg-no-repeat font-medium uppercase text-white before:absolute before:inset-0 before:bg-black/50'>
          <a
            class='z-10 flex h-full w-full flex-col items-center justify-center'
            href='/projects/web-design'
          >
            <strong class='mb-3 text-[28px] font-medium leading-9 tracking-[1.4px]'>
              Web Design
            </strong>
            <div class='flex items-center gap-4'>
              <span class='text-[15px] font-medium leading-[22px] tracking-[5px]'>
                View Projects
              </span>
              <img
                src={arrowRight}
                class='h-2'
                alt='Arrow pointing to the right'
              />
            </div>
          </a>
        </li>
      )
    }

    {
      Astro.url.pathname !== '/projects/app-design' && (
        <li class='relative flex h-[250px] overflow-hidden rounded-[15px] bg-black bg-[url(/assets/home/mobile/image-app-design.jpg)] bg-cover bg-no-repeat font-medium uppercase text-white before:absolute before:inset-0 before:bg-black/50'>
          <a
            class='z-10 flex h-full w-full flex-col items-center justify-center'
            href='/projects/app-design'
          >
            <strong class='mb-3 text-[28px] font-medium leading-9 tracking-[1.4px]'>
              App Design
            </strong>
            <div class='flex items-center gap-4'>
              <span class='text-[15px] font-medium leading-[22px] tracking-[5px]'>
                View Projects
              </span>
              <img
                src={arrowRight}
                class='h-2'
                alt='Arrow pointing to the right'
              />
            </div>
          </a>
        </li>
      )
    }

    {
      Astro.url.pathname !== '/projects/graphic-design' && (
        <li class='relative flex h-[250px] overflow-hidden rounded-[15px] bg-black bg-[url(/assets/home/mobile/image-graphic-design.jpg)] bg-cover bg-no-repeat font-medium uppercase text-white before:absolute before:inset-0 before:bg-black/50'>
          <a
            class='z-10 flex h-full w-full flex-col items-center justify-center'
            href='/projects/graphic-design'
          >
            <strong class='mb-3 text-[28px] font-medium leading-9 tracking-[1.4px]'>
              Graphic Design
            </strong>
            <div class='flex items-center gap-4'>
              <span class='text-[15px] font-medium leading-[22px] tracking-[5px]'>
                View Projects
              </span>
              <img
                src={arrowRight}
                class='h-2'
                alt='Arrow pointing to the right'
              />
            </div>
          </a>
        </li>
      )
    }
  </ul>
</div>
