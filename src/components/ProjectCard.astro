---
export interface Props {
  title: string
  subtitle: string
  image: string
  imageAlt: string
}

const { title, subtitle, image, imageAlt } = Astro.props as Props
---

<li
  class="rounded-[15px] group bg-[#fdf3f0] hover:bg-peach-500 transition-colors max-w-[327px] lg:max-w-[350px] md:min-h-[310px] md:h-full md:max-w-[689px] overflow-hidden md:flex lg:flex-col md:items-center lg:mx-auto"
>
  <img class="w-full md:w-[339px] lg:w-full" src={image} alt={imageAlt} />
  <div class="py-8 px-[30px] flex flex-col items-center gap-4">
    <strong
      class="font-medium text-heading3 text-center text-peach-500 group-hover:text-white transition-colors uppercase"
      >{title}
    </strong>
    <p class="text-center group-hover:text-white transition-colors">
      {subtitle}
    </p>
  </div>
</li>
